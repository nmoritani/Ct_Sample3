<Window x:Class="BitmapFontConv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BitmapFontConv"
        mc:Ignorable="d"
        Title="BitmapFontConverter v.0.1" Height="450" Width="400">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="OutputFileName:" Margin="3" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textBox" Margin="3" Width="120" VerticalContentAlignment="Center" Text="bmpfontdata.c"/>
            <Button Content="CONV" Margin="3" Width="75" Click="button_Click"/>
        </StackPanel>
        <ListBox Grid.Row="1" x:Name="lbLog" FontFamily="Consolas" />
    </Grid>
</Window>
